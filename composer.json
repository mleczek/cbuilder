{
    "name": "mleczek/cbuilder",
    "description": "Package Manager for C++",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Wojciech Mleczek",
            "email": "mleczek.wojtek@gmail.com"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "build": "php bin/phar-create.php"
    },
    "autoload": {
