        "php-di/php-di": "^5.4",
        "composer/semver": "^1.4",
        "symfony/console": "^3.2",
        "justinrainbow/json-schema": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7"
    }
